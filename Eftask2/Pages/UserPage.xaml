<Page x:Class="Eftask2.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Eftask2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="Aqua" Offset="0"/>
                <GradientStop Color="DarkGray" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel   Height="400" Width="500">

            <Button Background="Transparent"  Name="allbookbutton"  Foreground ="Black" Height="50"   Width="120" Click="allbookbutton_Click_1"         >AllBooks</Button>
            <Button Background="Transparent" Name="Getbookbutton" Foreground ="Black" Height="50"  Width="120" Click="Getbookbutton_Click"   >Get a book</Button>
            <Button Background="Transparent" Name="Mybookbutton" Foreground ="Black" Height="50"   Width="120" Click="Mybookbutton_Click"   >My Books</Button>
            <Button Background="Transparent"     Content="Back" Foreground ="Black" Width="157" Height="34" FontSize="17"   Name="Back" Click="Back_Click_1"  />
        </StackPanel>
    </Grid>
</Page>
